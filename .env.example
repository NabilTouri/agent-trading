# ═══════════════════════════════════════════════════════
# AI Trading Bot — Environment Configuration
# ═══════════════════════════════════════════════════════

# Anthropic API Key (used by CrewAI via LiteLLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CrewAI / LLM Configuration
CREW_MODEL=claude-sonnet-4-20250514
CREW_TEMPERATURE=0.3
CREW_MAX_TOKENS=4000
CREW_VERBOSE=false

# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Trading
RISK_PER_TRADE=0.02
MAX_POSITIONS=3
MAX_DRAWDOWN=0.20
TRADING_PAIRS=BTC/USDT,ETH/USDT

# Strategy
STRATEGY_INTERVAL_MINUTES=30
EXECUTION_INTERVAL_SECONDS=30

# Logging
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000

# Cost Monitoring
DAILY_COST_LIMIT_USD=5.0
MONTHLY_COST_LIMIT_USD=150.0

# Safeguards
MAX_TRADES_PER_DAY=8
MIN_POSITION_SPACING_MINUTES=90
CONSECUTIVE_LOSS_PAUSE_COUNT=3
CONSECUTIVE_LOSS_PAUSE_HOURS=2
MAX_CAPITAL_IN_POSITIONS_PCT=0.10
MIN_CONFIDENCE=60
FULL_SIZE_CONFIDENCE=70
MIN_RR_RATIO=2.0
MAX_SL_DISTANCE_PCT=3.0
MAX_SPREAD_BPS=10
MAX_SLIPPAGE_PCT=0.5
